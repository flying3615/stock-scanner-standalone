# Required
POLYGON_API_KEY=

# Optional GHCR auth (for private images)
GHCR_USER=
GHCR_TOKEN=

# FinancialJuice news module (optional)
# Auto mode: browser (FJ_EMAIL/FJ_PASSWORD) -> command -> env token -> manual
FJ_REFRESH_MODE=

# Browser refresher mode
FJ_EMAIL=
FJ_PASSWORD=
FJ_BROWSER_HEADLESS=true
FJ_LOGIN_TIMEOUT_MS=75000
FJ_TOKEN_CAPTURE_TIMEOUT_MS=20000

# Static token mode
FJ_INFO_TOKEN=

# Command refresher mode
FJ_TOKEN_REFRESH_COMMAND=
# plain | json
FJ_TOKEN_REFRESH_OUTPUT=plain
FJ_TOKEN_JSON_FIELD=token
FJ_TOKEN_REFRESH_TIMEOUT_MS=90000

# Token lifecycle
FJ_TOKEN_SOFT_TTL_MINUTES=8640
FJ_TOKEN_HARD_TTL_MINUTES=10080
FJ_TOKEN_STORE_PATH=./data/news-token-store.json

# Request settings
FJ_BASE_URL=https://live.financialjuice.com/FJService.asmx
FJ_TIME_OFFSET=13
FJ_REQUEST_TIMEOUT_MS=12000
FJ_USER_AGENT=
FJ_NEWS_CACHE_TTL_SECONDS=120
